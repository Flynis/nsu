import operand;

export {

    ArrayFunc ::= ArrayApp, ArrayUpd;
    ArrayApp : (arr: Operand, index: Operand);
    ArrayUpd : (arr: Operand, index: Operand, value: Operand);

    arrfunc2s(f: ArrayFunc) -> string;

}

arrfunc2s(f: ArrayFunc) -> string {
    switch(f) {
        ArrayApp(arr, idx): "APP(" + o2s(arr) + ", " + o2s(idx) + ")";
        ArrayUpd(arr, idx, val): "UPD(" + o2s(arr) + ", " + o2s(idx) + ", " + o2s(val) + ")";
    }
}
