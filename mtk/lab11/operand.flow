import variable;

export {

    Operand ::= Const, Var;

    Const ::= ConstInt, ConstArray;
    ConstInt : (i: int);
    ConstArray : ();

    o2s(o: Operand) -> string;

    c2s(c: Const) -> string;

    cint2s(c: ConstInt) -> string;

}

o2s(o: Operand) -> string {
    switch(o) {
        Const: c2s(c);
        Var(name): name;
    }
}

cint2s(c: ConstInt) -> string {
    i2s(c.i);
}
