<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="600.0" minWidth="800.0" prefHeight="900.0" prefWidth="1600.0" styleClass="body" stylesheets="@../css/global.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.dyakun.snake.controller.ConnectController">
   <center>
      <VBox alignment="CENTER" spacing="20.0">
          <Label styleClass="header" text="Active games" />
          <HBox alignment="CENTER" maxHeight="100.0" maxWidth="700.0" minHeight="100.0" minWidth="700.0" prefHeight="100.0" prefWidth="700.0" spacing="15.0">
              <Label styleClass="medium-text" text="nickname:" />
              <TextField fx:id="nicknameField" minHeight="45.0" prefWidth="300.0" />
              <ChoiceBox fx:id="choiceRole" minHeight="45.0" prefWidth="180.0" />
          </HBox>
         <VBox alignment="TOP_CENTER" maxHeight="500.0" maxWidth="700.0" minHeight="500.0" minWidth="700.0" prefHeight="500.0" prefWidth="700.0" spacing="10.0">
            <Label fx:id="errorLabel" styleClass="error-label" text="Connect failed" />
            <TableView fx:id="gamesInfoTable" prefHeight="400.0" prefWidth="Infinity">
                 <placeholder>
                     <Label styleClass="medium-text" text="No active games" />
                 </placeholder>
                 <columns>
                     <TableColumn fx:id="nameColumn" editable="false" prefWidth="200.0" sortable="false" text="name" />
                     <TableColumn fx:id="ipColumn" editable="false" prefWidth="200.0" sortable="false" text="ip" />
                     <TableColumn fx:id="playersColumn" editable="false" prefWidth="150.0" sortable="false" styleClass="align-center" text="players" />
                     <TableColumn fx:id="fieldColumn" editable="false" prefWidth="150.0" sortable="false" styleClass="align-center" text="field" />
                 </columns>
                 <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                 </columnResizePolicy>
            </TableView>
         </VBox>
      </VBox>
   </center>
   <bottom>
       <AnchorPane maxHeight="80.0" prefHeight="80.0" minHeight="80.0">
           <Button AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10" minHeight="60.0" mnemonicParsing="false" onAction="#connectClick" prefWidth="300.0" text="CONNECT"/>
           <Button AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="10" minHeight="60.0" mnemonicParsing="false" onAction="#backClick" prefWidth="200.0" text="BACK"/>
       </AnchorPane>
   </bottom>
</BorderPane>
