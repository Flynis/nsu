<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" minHeight="600.0" minWidth="800.0" prefHeight="900.0" prefWidth="1600.0"
      spacing="15.0" styleClass="body" stylesheets="@../css/global.css"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.dyakun.snake.controller.MenuSceneController">
   <Label styleClass="logo" text="snake" />
   <VBox alignment="TOP_CENTER" maxHeight="500.0" maxWidth="600.0" minHeight="500.0" minWidth="600.0"
         prefHeight="500.0" prefWidth="600.0" spacing="10.0">
      <TableView fx:id="gamesInfoTable" prefHeight="400.0" prefWidth="Infinity">
           <placeholder>
               <Label styleClass="medium-text" text="No active games"/>
           </placeholder>
           <columns>
               <TableColumn fx:id="masterColumn" editable="false" sortable="false" prefWidth="150.0" text="master" />
               <TableColumn fx:id="ipColumn" editable="false" sortable="false" prefWidth="150.0" text="ip" />
               <TableColumn fx:id="playersColumn" editable="false" sortable="false" prefWidth="100.0" styleClass="align-center" text="players" />
               <TableColumn fx:id="fieldColumn" editable="false" sortable="false" prefWidth="100.0" styleClass="align-center" text="field" />
               <TableColumn fx:id="foodColumn" editable="false" sortable="false" prefWidth="100.0" styleClass="align-center" text="food" />
           </columns>
           <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
           </columnResizePolicy>
      </TableView>
       <HBox prefHeight="35.0" prefWidth="Infinity">
           <HBox prefHeight="100.0" prefWidth="200.0">
               <Button minHeight="35.0" mnemonicParsing="false" onAction="#exitClick" prefWidth="80.0" text="Exit" />
           </HBox>
           <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="400" spacing="5.0">
               <Button minHeight="35.0" mnemonicParsing="false" onAction="#createGameClick" prefWidth="140.0" text="New game" />
               <Button minHeight="35.0" mnemonicParsing="false" onAction="#connectClick" prefWidth="120.0" text="Connect" />
           </HBox>
       </HBox>
      <Label styleClass="error-label" text="Connect failed" />
   </VBox>
</VBox>
