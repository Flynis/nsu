<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="600.0" minWidth="800.0" prefHeight="900.0" prefWidth="1600.0" styleClass="body" stylesheets="@../css/global.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.dyakun.snake.controller.CreateSceneController">
   <center>
      <VBox alignment="CENTER" spacing="20.0">
          <Label styleClass="header" text="Create game" />
          <HBox alignment="CENTER" maxHeight="100.0" maxWidth="700.0" minHeight="100.0" minWidth="700.0" prefHeight="100.0" prefWidth="700.0" spacing="15.0">
              <Label styleClass="medium-text" text="nickname:" />
              <TextField fx:id="nicknameField" minHeight="45.0" prefWidth="300.0" />
          </HBox>
          <Label fx:id="errorLabel" styleClass="error-label" text="Connect failed" />
      </VBox>
   </center>
   <bottom>
       <AnchorPane maxHeight="80.0" prefHeight="80.0" minHeight="80.0">
           <Button AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10" minHeight="60.0" mnemonicParsing="false" onAction="#createGameClick" prefWidth="300.0" text="CREATE"/>
           <Button AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="10" minHeight="60.0" mnemonicParsing="false" onAction="#backClick" prefWidth="200.0" text="BACK"/>
       </AnchorPane>
   </bottom>
</BorderPane>
